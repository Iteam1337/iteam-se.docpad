#slider.carousel.slide(data-ride="carousel")
  ol.carousel-indicators
    li.active(data-target="#slider",data-slide-to="0")
    li(data-target="#slider",data-slide-to="1")
    li(data-target="#slider",data-slide-to="2")
    li(data-target="#slider",data-slide-to="3")
    li(data-target="#slider",data-slide-to="4")

  .carousel-inner
    .item.active
      img(src=document.topImage)
      .carousel-caption.visible-md.visible-lg= document.introHeading[0]
        .sub-caption= document.introSubheading
      .carousel-caption.visible-sm= document.introHeading[0]
      .carousel-caption.visible-xs= document.introHeadingMobile[0]
    each showcase in getShowCase()
      if !!showcase.topImage
      - bgImg = "background-image:url(" + showcase.topImage + ");"
      .item(style=bgImg)
        .carousel-caption
          a(href=showcase.url)= showcase.title
          .sub-caption
            if !!showcase.sections
              each section, i in showcase.sections
                - posClass = i !== 0 ? "separator-before" : ""
                - section = getMetadataFrom(section)
                a.section(class = posClass, href = section.url, target = "_blank")= section.title

  a.left.carousel-control(href="#slider",data-slide="prev")
    .glyphicon.glyphicon-chevron-left
  a.right.carousel-control(href="#slider",data-slide="next")
    .glyphicon.glyphicon-chevron-right

