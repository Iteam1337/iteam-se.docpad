/* Mixins
---------------------------------------------*/
box-sizing(model)
  box-sizing model
  -webkit-box-sizing model
  -moz-box-sizing model

box-shadow(shadow)
  box-shadow: shadow
  -webkit-box-shadow: shadow
  -moz-box-shadow: shadow

/* General
---------------------------------------------*/
a, a:link
  color: orange
  cursor: pointer
  text-decoration: none

a.btn
  box-sizing(border-box)

  background:orange
  color:#fff
  display:inline-block
  font-size:12px
  margin-right:20px

