/* General
---------------------------------------------*/
a, a:link
  color: orange
  cursor: pointer
  text-decoration: none

a.btn
  background:orange
  color:#fff
  display:inline-block
  font-size:12px
  margin-right:20px

body
  background:#fff
  font-family: "AvantGarde ExtraLight" , Franklin Gothic Book, Arial, Sans-Serif
  font-size: 1em
  height:100%;
  overflow-x:hidden
    
p
  color:#666
  font-family: "Palatino"
  line-height:2
  margin-bottom: 20px

  a
    font-family: "AvantGarde ExtraLight" , Franklin Gothic Book, Arial, Sans-Serif

ul
  list-style:none
  margin:0
  padding:0

table
  tfoot, tbody
    th
      border-top: 1px solid #DDD;

/* Headings
---------------------------------------------*/
h1, h2, h3, h4
  font-weight: normal

h2
  font-size:24px