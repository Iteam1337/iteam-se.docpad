@import "variable"
.slide-hide, .slide-show
  trans all 300ms ease

.slide-hide
  opacity:1

.slide-hide.slide-hide-active
  opacity:0

.slide-show
  opacity:0
  top:60px

.slide-show.slide-show-active
  opacity:1
  top:50px

.slide-in-hide, .slide-in-show
  trans all 300ms ease

.slide-in-hide
  left:0
  opacity:1

.slide-in-hide.slide-in-hide-active
  left:100%
  opacity:0

.slide-in-show
  left:100%
  opacity:0

.slide-in-show.slide-in-show-active
  left:0
  opacity:1