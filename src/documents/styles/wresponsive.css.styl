/**
 * Big screens > 1200px
 */
@media (min-width:1200px)
  #cases
    .case
      display: inline-block;
      margin-right: 3%;
      vertical-align: top;
      width: 30%;

      .case-image
        display block
        height:150px
        margin:0 auto 20px
        width:auto

  #case
    .about
      width:100%
  .container
    max-width:100%

    > div
     display: inline-block

/**
 * iPad landscape
 */
@media (max-width:979px) and (min-width:768px)
  #case
    img
      &.right
        float:right
        position:relative
        right:0
        width:300px
    .about
      width:100%;

/**
 * iPad portrait
 */
@media (max-width:767px)
  body
    padding:0

  .container
    padding:0 20px

/**
 * iPhone
 */
@media (max-width:480px)
  iframe
    height:auto

  a.btn
    font-family:'Palatino', sans-serif;
    margin: 0 0 10px
    width:100%

  .container
    margin-top:0

  #header
    padding:20px 10px 5px 20px
    text-align:left
    
    .header-inner
      margin:0

    .brand
      width:80px

    #nowplaying
      margin-bottom:20px

    .nav, .subnav
      display:none

    .openMobileNav
      color:#fff
      position:relative

      .etp-menu
        position: absolute;
        right: 0;
        top: -9px;

    #mobileNav
      margin-top:40px

      a
        display: block
        margin-bottom:10px
        padding:5px 0

        &.active
          color:#fff

  #cases
    .case
      .case-about
        width:100%
      .case-image
        display:block
        height:150px
        margin:0 auto 20px
        width:auto

  #case
    img
      &.right
        display none
    
    .about
      .content
        .team
          li
            display:block
            width:100%

  .coworkers
    .coworker
      width:100%

      &:nth-child(2n)
        text-align:left

        .image
          float:none
          margin-right:20px

        .info
          margin-right:0

  #coworker
    .cases
      li
        text-align:left
        width:100%;

    .github
      li
        a
          display: inline-block;
          font-size: 0.8em;
          max-width: 80%;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;

  #page
    .history
      .year
        left:0
        margin-bottom:20px
        position:relative

  #footer
    margin:40px 20px 0

    #followUs
      text-align:left
      width:100%




