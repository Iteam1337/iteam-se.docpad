/* Variables
---------------------------------------------*/
igrey = #231F20
iorange = #FFBD09
iorangergb = rgb(255,189,9)
bgBoxes = rgba(0,0,0,0.3)
opsBg = url(http://iteam.se/uploads/operations.jpg)
regularBg = url(http://iteam.se/uploads/madmen.png)
careerBg = url(http://iteam.se/uploads/madmen.png)

/* Mixins
---------------------------------------------*/
box-sizing(model)
  box-sizing model
  -webkit-box-sizing model
  -moz-box-sizing model

box-shadow(shadow)
  box-shadow: shadow
  -webkit-box-shadow: shadow
  -moz-box-shadow: shadow

/* Navbar
---------------------------------------------*/
#header
  box-sizing(border-box)

  background:#333
  padding-bottom:10px
  position:relative

  .header-inner
    margin:25px auto 0 auto
    max-width:700px

  .brand
    float:left
    position:relative
    top:-10px
    z-index:1

  .nav, .subnav
    text-align:right
    vertical-align:top

    a
      color:#ccc
      display: inline-block;
      margin-right:30px

      &:last-child
        margin:0

      &.active, &:hover
        color:#ffbd09

      a:hover
        background:none
        color:#333

  .nav
    left:-60px
    position:relative
    text-align:center
    top:4px

  .subnav
    background:#2b2b2b
    font-size:0.6em
    margin:0

    .subnav-inner
      margin:0 auto
      max-width:1170px

      .btn
        box-shadow(none)

        background:#666
        border:none
        border-radius:0
        margin:0
        padding:5px 10px
        position:relative
        text-shadow:none

  .openMobileNav
    display:none

#navSubpages
  background:#444
  font-size:0.8em
  padding:10px
  text-align:center
  
  .subpage-inner
    margin:0 auto
    max-width:1170px

    a
      color:#fff
      display inline-block
      margin:5px 0

      &.active,
      &:hover
        color:#ffbd09

      &:not(:last-child)
        margin-right:20px

#mobileNav, #subpageWrap
  display:none

/* Layout
---------------------------------------------*/
#nowplaying
  font-size:1em
  padding: 40px 0 0

  > a
    display:inline-block
    margin-right:20px
    vertical-align:top
    width:20%

  #wejay
    margin-right:20px

  .info
    display inline-block

    p
      margin:0

    a
      display:block
      line-height:1.5

.container
  margin-top:40px
  max-width:700px

#footer
  border-top:1px solid #ccc
  margin:40px auto
  max-width:700px
  padding-top:40px

  > div
    display:inline-block
    vertical-align:top

  #address
    margin-right:20px
    width:65%

    li
      font-size:0.8em
      margin-bottom:5px
      
      &.company
        font-size:1em
        margin-bottom:10px

  #followUs
    text-align:right
    width:30%

    > a
      -webkit-transition:color 300ms ease

      color:#999
      display:inline-block
      font-size:2em

      &:not(:last-child)
        margin-right:20px

      &:hover
        color: #ffbd09

#subpages
  margin-bottom: 20px;
  padding: 10px 0;

  li
    display inline-block
    margin-right:20px

    &:not(:last-child)
      border-right:1px solid #ccc
      padding-right:20px

#github
