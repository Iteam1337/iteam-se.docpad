/* Font-face
---------------------------------------------*/
@font-face
  font-family: "AvantGarde ExtraLight";
  src: url(/fonts/lte52009.ttf) format('truetype'); /* TTF file for CSS3 browsers */  

@font-face
  font-family: 'Entypo';
  src:url(/fonts/Entypo-webfont.woff) format('woff');
  font-weight: normal;
  font-style: normal;

/* Variables
---------------------------------------------*/
igrey = #231F20
iorange = #FFBD09
iorangergb = rgb(255,189,9)
bgBoxes = rgba(0,0,0,0.3)
opsBg = url(http://iteam.se/uploads/operations.jpg)
regularBg = url(http://iteam.se/uploads/madmen.png)
careerBg = url(http://iteam.se/uploads/madmen.png)

/* Mixins
---------------------------------------------*/
box-sizing(model)
  box-sizing model
  -webkit-box-sizing model
  -moz-box-sizing model

box-shadow(shadow)
  box-shadow: shadow
  -webkit-box-shadow: shadow
  -moz-box-shadow: shadow

/* General
---------------------------------------------*/
a, a:link
  color: orange
  cursor: pointer
  text-decoration: none

a.btn
  background:orange
  color:#fff
  display:inline-block
  font-size:12px
  margin-right:20px

body
  background:#fff
  font-family: "AvantGarde ExtraLight" , Franklin Gothic Book, Arial, Sans-Serif
  font-size: 1em
  height:100%;
    
p
  color:#666
  font-family: "Palatino"
  line-height:2
  margin-bottom: 20px

  a
    font-family: "AvantGarde ExtraLight" , Franklin Gothic Book, Arial, Sans-Serif

table
  tfoot, tbody
    th
      border-top: 1px solid #DDD;

/* Headings
---------------------------------------------*/
h1, h2, h3, h4
  font-weight: normal

h2
  font-size:24px

/* Navbar
---------------------------------------------*/
.nav.nav-collapse.collapse
  margin-bottom: 0;
  margin-top: 40px;
  width: 100%;

  a
    display: inline-block;
    padding:20px

    &.active, &:hover
      background:#fff
      color:#333

    a:hover
      background:none
      color:#333

/* Header
---------------------------------------------*/
#header
  box-sizing(border-box)

  background:#333
  position:relative
  text-align:center

.hero-unit
  background: regularBg

#nowplaying
  background:#2b2b2b
  color:#fff
  margin-bottom:20px
  padding: 5px 20px
  text-align:center
  width:100%

  #wejay
    margin-right:20px
    width:25px

.container
  margin-top:40px


.coworkers
  .coworker
    a
      display inline-block
      .image
        border-radius:100px
        display inline-block
        margin-right:20px
        width:100px

.blog
  .post
    margin-bottom:40px

    header      
      .date
        color:#666
        font-family:'Palatino'
        font-size:14px

      .title
        display inline-block
        font-size:24px
        margin:20px 0

    article
      color:#999
      font-family:'Palatino'
      line-height:2

#post
  margin-top:40px

  .post-title
    margin:20px 0 40px

  .post-content
    color: #666

  .post-author
    border-top: 1px solid #eee
    padding-top: 20px
    margin-top: 40px

#about
  .history
    margin-bottom:20px
    position:relative

    .year
      left:-80px
      position: absolute

    .text
      font-size:0.8em

  #financialNumbers
    position: relative
    left: -60px

  .legend
    margin-top:20px
    > div
      display: inline-block
      margin-right:20px

    .box
      display: inline-block
      height:10px
      margin-right: 10px
      width:10px

    .employees
      .box
        background:iorange

    .turnover
      .box
        background:rgb(151,187,205)


footer
  box-sizing(border-box)

  background: igrey
  bottom:0
  color:#fff
  left:0
  margin-top: 50px
  padding:40px
  width: 100%







