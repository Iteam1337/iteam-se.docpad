/* Variables
---------------------------------------------*/
igrey = #231F20
iorange = #FFBD09
iorangergb = rgb(255,189,9)
bgBoxes = rgba(0,0,0,0.3)
opsBg = url(http://iteam.se/uploads/operations.jpg)
regularBg = url(http://iteam.se/uploads/madmen.png)
careerBg = url(http://iteam.se/uploads/madmen.png)

/* Mixins
---------------------------------------------*/
box-sizing(model)
  box-sizing model
  -webkit-box-sizing model
  -moz-box-sizing model

box-shadow(shadow)
  box-shadow: shadow
  -webkit-box-shadow: shadow
  -moz-box-shadow: shadow

/* Navbar
---------------------------------------------*/
.nav, .subnav
  margin: 40px 0 0

  a
    display: inline-block;
    padding:20px

    &.active, &:hover
      color:#fff

    a:hover
      background:none
      color:#333

.subnav
  font-size:0.8em
  margin:0
  position:absolute
  right:0
  top:0

.other-cases
  background:#fff
  padding:20px 0

  li
    display:inline-block
    margin-right:20px

/* Header
---------------------------------------------*/
#header
  box-sizing(border-box)

  background:#333
  padding-top:20px
  position:relative
  text-align:center

#nowplaying
  box-sizing(border-box)

  background:#2b2b2b
  color:#fff
  font-size:0.6em
  margin-bottom:40px
  padding: 10px 0
  text-align:center
  width:100%

  #wejay
    margin-right:20px
    width:25px

.container
  margin-top:40px
  max-width:700px

#footer
  border-top:1px solid #ccc
  margin:40px auto 0
  max-width:700px
  padding-top:40px

  > div
    display:inline-block
    vertical-align:top

  #address
    margin-right:20px
    width:65%

    li
      font-size:0.8em
      margin-bottom:5px
      
      &.company
        font-size:1em
        margin-bottom:10px

  #followUs
    text-align:right
    width:30%

    > a
      -webkit-transition:color 300ms ease

      color:#999
      display:inline-block
      font-size:2em

      &:not(:last-child)
        margin-right:20px

      &:hover
        color: #ffbd09

#about
  .history
    margin-bottom:20px
    position:relative

    .year
      left:-80px
      position: absolute

    .text
      font-size:0.8em

  #financialNumbers
    position: relative
    left: -60px

  .legend
    margin-top:20px
    > div
      display: inline-block
      margin-right:20px

    .box
      display: inline-block
      height:10px
      margin-right: 10px
      width:10px

    .employees
      .box
        background:iorange

    .turnover
      .box
        background:rgb(151,187,205)

#github
  display none


