/* Navbar
---------------------------------------------*/
.nav.nav-collapse.collapse
  margin-bottom: 0;
  margin-top: 40px;
  width: 100%;

  a
    display: inline-block;
    padding:20px

    &.active, &:hover
      background:#fff
      color:#333

    a:hover
      background:none
      color:#333

/* Header
---------------------------------------------*/
#header
  box-sizing(border-box)

  background:#333
  position:relative
  text-align:center

.hero-unit
  background: regularBg

#nowplaying
  box-sizing(border-box)

  background:#2b2b2b
  color:#fff
  font-size:0.6em
  margin-bottom:20px
  padding: 10px 0
  text-align:center
  width:100%

  #wejay
    margin-right:20px
    width:25px

.container
  margin-top:40px
  width:700px

.case
  img
    &.left
      left:-100px
      position:absolute
    &.right
      position:absolute
      right:-100px

  .about
    -webkit-transition:all 300ms ease
    width:80%

    .team
      border-top:1px solid #ccc
      margin-top:40px
      padding-top:20px

      li
        display inline-block
        margin-bottom:20px
        width:49%

.coworkers
  .coworker
    a
      display inline-block
      .image
        border-radius:100px
        display inline-block
        margin-right:20px
        width:100px

.blog
  .post
    margin-bottom:40px

    header      
      .date
        color:#666
        font-family:'Palatino'
        font-size:14px

      .title
        display inline-block
        font-size:24px
        margin:20px 0

    article
      color:#999
      font-family:'Palatino'
      line-height:2

#post
  margin-top:40px

  .post-title
    margin:20px 0 40px

  .post-content
    color: #666

  .post-author
    border-top: 1px solid #eee
    padding-top: 20px
    margin-top: 40px

#about
  .history
    margin-bottom:20px
    position:relative

    .year
      left:-80px
      position: absolute

    .text
      font-size:0.8em

  #financialNumbers
    position: relative
    left: -60px

  .legend
    margin-top:20px
    > div
      display: inline-block
      margin-right:20px

    .box
      display: inline-block
      height:10px
      margin-right: 10px
      width:10px

    .employees
      .box
        background:iorange

    .turnover
      .box
        background:rgb(151,187,205)

@media (min-width:1200px)
  .case
    .about
      width:100%

@media (max-width:979px) and (min-width:768px)
  .case
    .about
      width:60%;




