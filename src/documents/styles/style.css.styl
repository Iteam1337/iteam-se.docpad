/* Variables
---------------------------------------------*/
igrey = #231F20
iorange = #FFBD09
iorangergb = rgb(255,189,9)
bgBoxes = rgba(0,0,0,0.3)
opsBg = url(http://iteam.se/uploads/operations.jpg)
regularBg = url(http://iteam.se/uploads/madmen.png)
careerBg = url(http://iteam.se/uploads/madmen.png)

/* Mixins
---------------------------------------------*/
box-sizing(model)
  box-sizing model
  -webkit-box-sizing model
  -moz-box-sizing model

box-shadow(shadow)
  box-shadow: shadow
  -webkit-box-shadow: shadow
  -moz-box-shadow: shadow

/* Navbar
---------------------------------------------*/
.nav, .subnav
  margin: 40px 0 0

  a
    display: inline-block;
    padding:20px

    &.active, &:hover
      color:#fff

    a:hover
      background:none
      color:#333

.subnav
  font-size:0.8em
  margin:0
  position:absolute
  right:0
  top:0

.other-cases
  background:#fff
  padding:20px 0

  li
    display:inline-block
    margin-right:20px

/* Header
---------------------------------------------*/
#header
  box-sizing(border-box)

  background:#333
  padding-top:20px
  position:relative
  text-align:center

.hero-unit
  background: regularBg

#nowplaying
  box-sizing(border-box)

  background:#2b2b2b
  color:#fff
  font-size:0.6em
  margin-bottom:40px
  padding: 10px 0
  text-align:center
  width:100%

  #wejay
    margin-right:20px
    width:25px

.container
  margin-top:40px
  max-width:700px

#cases
  .case
    margin-bottom:40px
    .case-image
      display inline-block
      margin-right:40px
      vertical-align:top
      width:12%

    .case-about
      display inline-block
      width:80%

      .case-title
        margin-top:0

      .case-tags
        border-top:1px solid #ccc
        padding-top:20px

        .tag
          display:inline-block
          margin-right:20px

#case
  margin:40px auto
  max-width:700px

  img
    &.left
      left:-100px
      position:absolute
    &.right
      float:right
      position:relative
      width:300px

  #twitter
    display none

  .tweets
    li
      color: #999
      font-family:'Palatino'
      font-size:0.8em
      margin-bottom:10px


  .about
    -webkit-transition:all 300ms ease
    
    h1
      margin-bottom:40px

    .content
      p
        img
          margin:40px 0
          width:100%

      .team
        border-top:1px solid #ccc
        margin-top:40px
        padding:40px 0
        position:relative

        .team-title
          box-sizing(border-box)
          -webkit-transform: translateX(-50%)

          background: #fff;
          font-size:1.2em
          left: 50%;
          padding: 5px 10px;
          position: relative;
          text-align: center;
          top: -55px;
          width: 120px;

        li
          display inline-block
          margin-bottom:20px
          text-align:center
          width:49%

          a
            display:block
            margin-bottom:5px


  .gallery
    border-top:1px solid #ccc
    padding-top:40px
    position:relative
    width: 100%;

    .gallery-title
      -webkit-transform: translateX(-50%);

      background: #fff;
      font-size:1.2em
      left: 50%;
      position: relative;
      text-align:center
      top: -50px;
      width: 120px;

    img
      border-radius: 3px;
      box-shadow: 0px 0px 20px rgba(0,0,0,0.6);

.coworkers
  .coworker
    a
      display inline-block
      .image
        border-radius:100px
        display inline-block
        margin-right:20px
        width:100px

#coworker
  #toAngular
    display:none

  .image
    border-radius: 300px
    border: 10px solid #ffbd09
    margin: 0 auto
    padding: 5px
    width: 200px
    
    img
      border-radius:200px
      width:200px
  .name, .job, .email
    text-align:center

  .name
    margin-top:20px
  .job
    margin-bottom:20px
  .email
    margin-bottom:40px

    a
      display inline-block
      margin-bottom:10px

  .title
    -webkit-transform: translateX(-50%)
    background:#fff
    font-size:1.2em
    left:50%
    position:absolute
    text-align:center
    top:-10px
    width:180px

  .social-media, .github, .cases
    border-top:1px solid #ccc
    margin-top:40px
    padding-top:40px
    position:relative
    text-align:center

    a
      -webkit-transition:color 300ms ease

      color:#666
      font-size:2em

      > div
        display inline-block
        margin-right:20px

      &:last-child
        > div
          margin-right:0

      &:hover
        color:#ffbd09

  .github, .cases
    text-align:left

    .title
      width:200px

    li
      margin-bottom:10px
      position: relative

      a
        color:#ffbd09
        font-size:1em

        &:hover
          color:#666

      .push-time
        color:#999
        font-family:'Palatino'
        font-size:0.6em
        position:absolute
        right:0
        top:0


  .cases
    .title
      width:220px

    li
      display: inline-block
      text-align:center
      width:49%

.blog
  .post
    margin-bottom:40px

    header      
      .date
        color:#666
        font-family:'Palatino'
        font-size:14px

      .title
        display inline-block
        font-size:24px
        margin:20px 0

    article
      color:#666
      font-family:'Palatino'
      line-height:2

#post
  margin-top:40px

  .post-title
    margin:20px 0 40px

  .post-content
    color: #666

  .post-author
    border-top: 1px solid #ccc
    padding-top: 20px
    margin-top: 40px

    a
      display block
      margin-bottom:5px

#about
  .history
    margin-bottom:20px
    position:relative

    .year
      left:-80px
      position: absolute

    .text
      font-size:0.8em

  #financialNumbers
    position: relative
    left: -60px

  .legend
    margin-top:20px
    > div
      display: inline-block
      margin-right:20px

    .box
      display: inline-block
      height:10px
      margin-right: 10px
      width:10px

    .employees
      .box
        background:iorange

    .turnover
      .box
        background:rgb(151,187,205)

#github
  display none


@media (min-width:1200px)
  #case
    .about
      width:100%

    img
      &.right
        float:none
        position:absolute
        right:-150px
        width:450px

@media (max-width:979px) and (min-width:768px)
  #case
    img
      &.right
        float:right
        position:relative
        right:0
        width:300px
    .about
      width:100%;

@media (max-width:767px)
  body
    padding:0

  .container
    padding:0 20px

@media (max-width:480px)
  #header
    padding:20px
    text-align:left

    #nowplaying
      margin-bottom:20px

    .nav, .subnav
      display:none

    .openMobileNav
      color:#fff
      position:relative

      .etp-menu
        position: absolute;
        right: 0;
        top: -30px;

    #mobileNav
      margin-top:20px

      a
        display: block
        margin-bottom:10px
        padding:5px 0

        &.active
          color:#fff

  #case
    img
      &.right
        display none

  #coworker
    .cases
      li
        text-align:left
        width:100%;

    .github
      li
        a
          display: inline-block;
          font-size: 0.8em;
          max-width: 80%;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;






