box-sizing(model)
  box-sizing model
  -webkit-box-sizing model
  -moz-box-sizing model

#page
  li
    font-family: 'Palatino'
    line-height: 1.75
    list-style: circle
    margin-left: 20px

  #connectedCases, #opportunities
    border-top:1px solid #ccc;
    margin-top:40px;
    padding-top:20px

    .title
      -webkit-transform: translateX(-50%)

      background: #fff;
      font-size:1.2em
      left: 50%;
      padding: 5px 10px;
      position: relative;
      text-align: center;
      top: -35px;
      width: 180px;
  
  #connectedCases
    ul
      li
        display inline-block
        margin-bottom:20px
        text-align:center
        width:49%

  #opportunities
    ul
      li
        list-style:none
        margin-left:0

        a
          display block
          margin-bottom:20px

  .operations-icon
    float:right
    margin-left:20px
    width:75px

  .press
    li
      border-bottom: 1px solid #ccc
      list-style:none
      margin-left:0
      margin-bottom: 20px

      .post-title
        display:block
        margin:20px 0

    .git
      a
        box-sizing(border-box)

        background: #f5f5f5
        border: 1px solid rgba(0,0,0,0.15)
        border-radius: 3px
        color: #333
        display: block
        font-size: 0.8em
        padding: 10px
        width: 100%

      .simple,.post-date
        display:none

  .yarpp-related-rss, article a[rel="nofollow"]
    display:none

  .common
    input, textarea
      box-sizing(border-box)
      width:100%

    input
      padding:20px 10px

    textarea
      height:200px