@import "variable"
#cases
  .case
    margin-bottom:40px
    .case-image
      display inline-block
      margin-right:40px
      vertical-align:top
      width:30%

    .case-about
      display inline-block
      width:60%

      .case-title
        margin-top:0

      .case-tags
        border-top:1px solid #ccc
        padding-top:20px

        .tag
          display:inline-block
          margin-right:20px

#case
  margin:40px auto
  max-width:700px

  .title
    box-sizing(border-box)
    trans translateX(-50%)


    background: #fff;
    font-size:1.2em
    left: 50%;
    padding: 5px 10px;
    position: relative;
    text-align: center;
    top: -55px;
    width: 120px;

  .about
    transition all 300ms ease

    h1
      margin-bottom:40px

    .content
      p
        img
          margin:40px 0
          width:100%

          &.left
            left:-100px
            position:absolute
          &.right
            float:right
            margin-left:20px
            position:relative
            width:250px

      .team, .relatedServices, .twitter
        border-top:1px solid #ccc
        margin-top:40px
        padding:40px 0
        position:relative

        li
          display inline-block
          margin-bottom:20px
          text-align:center
          vertical-align:top
          width:49%

          a
            display:block
            margin-bottom:5px

      .urls
        border-top:1px solid #ccc
        padding:40px 0
        position:relative

        .title
          width:200px;

      .gallery
        border-top:1px solid #ccc
        padding-top:40px
        position:relative
        width: 100%;

        .title
          top: -50px;

        .imgWrap
          img
            max-height:231px
            margin-bottom:20px
            margin-right:20px

            &:nth-child(2n)
              margin-right:0

      .relatedServices
        padding:40px 0 0

        .title
          width:200px

      .twitter
        padding:40px 0 0

        .tweets
          li
            color: #999
            font-family:'Palatino'
            font-size:0.8em
            margin-bottom:10px
            text-align:left
            vertical-align:top
            width:48%

            &:nth-child(2n-1)
              margin-right:15px

            a
              display:inline

            .text
              color:#666
              width:100%;

            .time
              margin: 5px 0

            .user
              font-weight:bold