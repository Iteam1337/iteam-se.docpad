---
layout: default
---

article#case.row-fluid
  .about
    h1= document.title
    .content
      .text!= content

      .information
        if (document.team)
          ul.team
            .title Teamet
            each member in document.team
              li
                each coworker in getCollection('coworkers').toJSON()
                  if coworker.shortname == member
                    a(href="/coworkers/" + member)= coworker.title
                    div= coworker.jobTitle

        if (document.readmorelinks)
          ul.urls
            .title Relaterade länkar
            each url in document.readmorelinks
              li
                a(href=url)= url

        if (document.imageGallery)
          .gallery
            .title Bilder
            .imgWrap
              each image in document.imageGallery
                img(src="/images/" + image)

        if (document.tags)
          ul.relatedServices
            .title Relaterade tjänster
            each tag in document.tags
              each service in getCollection('services').toJSON()
                each sTag in service.tags
                  if tag === sTag                  
                    li
                      a(href=service.url + "#" + tag[0].toUpperCase() + tag.substr(1).replace(/ /g,'-'))= tag[0].toUpperCase() + tag.substr(1)

          .twitter(ng-show="tweets")
            .title Twitter
            - twitter = "twitter = '" + document.twitterTag + "'"
            ul.tweets(ng-init=twitter)
              li(ng-repeat="tweet in tweets | limitTo:5")
                .text(ng-bind-html-unsafe="tweet.text")
                .time {{tweet.created_at}}
                .user {{tweet.user}}