---
layout: default
---

article#post.case.row
  .span3
    img(src=document.image)
  .span9.projectMembers
    h1= document.title
    .post-content!= content
    if (document.team)
      ul
        each member in document.team
          li
            each coworker in getCollection('coworkers').toJSON()
              if coworker.shortname == member
                if coworker.image
                  div.memberImg
                    img(src=coworker.image)
                a(href="/coworkers/" + member)= coworker.title
                span= ", " + coworker.jobTitle

footer
  if document.relatedDocuments && document.relatedDocuments.length
    section#related
      h3 Related Posts
      nav.linklist
        each doc in document.relatedDocuments
          li
            span= doc.date.toDateString()
            |  &raquo;&nbsp;
            a(href=doc.url)= doc.title
