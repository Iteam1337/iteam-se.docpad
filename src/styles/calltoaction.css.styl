@import "variable"

.call-to-action-wrap
  width = 250px

  positioned('top-right', 50%, 0, auto, auto)
  translate-pos(width, -50%)
  transition(all 300ms ease)

  position fixed
  width width

  @media mobile
    translate-pos(0,0)
    
    left 0
    right 0
    top 0
    bottom 0

    margin-top 60px
    padding 0 20px
    position relative
    width 100%

  &.open
    translate-pos(0, -50%)

    @media mobile
      translate-pos(0,0)

  #call-to-action
    border-radius(2px 2px 0 0)
    positioned('top-left', 47px, auto, auto, -86px)
    rotated(-90deg)
    transition(all 300ms ease)

    background _orange
    cursor pointer
    padding 10px 20px

    &:hover
      background igrey
      color #fff

      @media mobile
        background _orange
        color #666

    @media mobile
      rotated(0)
      
      cursor default
      left 0
      right 0
      top 0
      bottom 0
      position relative    
  
  .inner
    background #fff
    border 3px solid _orange
    height 136px
    padding 25px 10px

    span, a
      font-size 16px
      padding-left 10px
      position relative
      top -11px
