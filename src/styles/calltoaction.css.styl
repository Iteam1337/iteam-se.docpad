@import "variable"

.call-to-action-wrap
  width = 250px

  positioned('top', 'right', 50%, 0)
  translate-pos(width, -50%)
  transition(all 300ms ease)

  position fixed
  width width

  @media mobile
    positioned('top','right',0,0,relative)
    translate-pos(0,0)
    
    left 0
    bottom 0

    margin-top 60px
    padding 0 20px
    width 100%

  &.open
    translate-pos(0, -50%)

    @media mobile
      translate-pos(0,0)

  #call-to-action
    border-radius(2px 2px 0 0)
    positioned('top','left', 47px, -86px)
    rotated(-90deg)
    transition(all 300ms ease)

    background _orange
    cursor pointer
    padding 10px 20px

    &:hover
      background igrey
      color #fff

      @media mobile
        background _orange
        color #666

    @media mobile
      positioned('top','right',0,0,relative)
      rotated(0)
      
      bottom 0
      cursor default
      left 0
  
  .inner
    background #fff
    border 3px solid _orange
    height 136px
    padding 25px 10px

    span, a
      font-size 16px
      padding-left 10px
      position relative
      top -11px

.call-to-action-form
  padding 0

  .row.contact
  h1
    @media mobile
      font-size 28px

  small
    @media mobile
      display block
      margin-top 10px
   
  input
    float left
    height 50px
    font-size 18px
    padding 10px
    width 32%

    @media mobile
      margin-bottom 10px
      width 100%

    &[type="text"]
      margin-right 1.4%

    &[type="submit"]
      border none

    &:last-child
      margin-right 0