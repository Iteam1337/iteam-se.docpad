@import "variable"

.case-index
  p,
  h2
    max-width 700px

#cases

  p,
  .case-title
    max-width 100%

  .case
    margin-bottom 40px
    display inline-block
    margin-right 2%
    vertical-align top
    width 30%

    .case-link
      margin-bottom 10px
      display block
      vertical-align bottom
      position relative

    .case-image
      display inline-block
      max-width 100%
      height 70px

    .case-about
      display inline-block
      width 100%

      .case-title
        margin 0

      .case-tags
        padding-top 20px

        .tag
          display inline-block

#case
  margin 40px auto 0
  max-width 100%

  .about
    width 100%

  .title
    box(border-box)

    background #fff
    font-size 1.2em
    margin 5px 0
    position relative
    width 120px

  h1
    margin-bottom 40px

  .content
    > div
      display inline-block
      vertical-align top
    .top
      display inline-block
      width 100%

    .text
      width 50%
    .information
      margin-left 40px
      width 40%
    .gallery
      li
        display inline-block
        margin 0 3% 0 0
        width 20%

        &:nth-child(2n+4)
          margin-right 0

        img
          margin 0 0 20px
          max-height auto
          max-width 100%

    .about,
    .quote
      display inline-block
      vertical-align top

    .about
      margin 0 0 70px
      padding 0
      height 175px
      position relative
      width 50%
      img
        positioned('bottom', 'left', 0, 0)

        max-height 175px
        max-width 30%
      .about-text
        positioned('bottom', 'right', 0, 0)
        
        width 65%
        max-height 175px
        h2
          display inline-block
          font-size 1.5em
        p
          display inline-block
          font-size 1.1em
          margin 0

    .quote
      color #444
      h3
        font-size 1.3em
        line-height 1.4
      blockquote
        border-left none
        margin-bottom 0
        padding-bottom 0
        text-align right

    .text
      width
    .information

    p
      img
        margin 40px 0

        &.left
          positioned('top', 'left', 0, -100px)

        &.right
          float right
          margin-left 20px
          position relative
          width 250px

    .team,
    .relatedServices,
    .twitter
      margin-top 40px
      position relative

      .header
        h2
          margin-top 20px

          @media tablet
            margin-top 0

      li
        display inline-block
        margin-top 20px
        text-align left
        vertical-align top
        width 48%
        a
          display block
          margin-bottom 5px

    .relatedServices,
    .twitter
      li
        box(border-box)
        margin 0
        padding 0 0 0 10px
        width 49%
        &:nth-child(2n)
          padding 0 10px 0 0

    .urls
      padding 40px 0
      position relative
      
      @media mobile
        padding 0

      li
        margin 0 0 5px

      .title
        width 200px

    .gallery
      margin-top 40px
      position relative
      width 100%

      .header
        h2
          margin-top 0

      li
        margin 0
        margin-top 20px
        max-height 150px
        width 49%

        &:nth-child(2n-1)
          padding-right 10px

        &:nth-child(2n+2)
          padding-left 10px

        img
          display block
          margin 0 auto
          max-height 100%
          vertical-align top
          max-width 100%

      .title
        top -50px

      .image-wrapper
        img
          max-height 231px
          margin-bottom 20px
          margin-right 20px

          &:nth-child(2n)
            margin-right 0

    .relatedServices
      padding 40px 0 0

      .title
        width 200px

    .twitter
      padding 40px 0 0

      .tweets
        li
          box(border-box)
          color #999
          font-size 0.8em
          text-align left
          vertical-align top
          width 50%
          padding 0 0 0 10px
          margin 0 0 10px
          display inline-block

          a
            display inline

          .text
            color #666
            width 100%

          .time
            margin 5px 0

          .user
            font-weight bold


  .information > :first-child
    padding-top 0
    margin-top 0

.next-case, .prev-case
  positioned('top', 'right', 250px, -200px)

  text-align center

  @media mobile
    display none

  a
    color #333 !important

  i
    display block
    font-size 3em
    margin 0 auto 20px

.prev-case
  left -200px
  right auto