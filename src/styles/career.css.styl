@import "variable"

#career
  .col-md-6 img
    margin-top 20px

    @media mobile
      margin-top 0
      max-width 100%

  .our-roles,
  .showcase-3d
    background greyBg
    margin-top 20px
    padding 0 20px 20px

    @media mobile
      margin-bottom 20px
      padding-top 1px

    h3
      margin 0

    p, li
      font-size 13px

  .showcase-3d
    p
      font-size 17px
      margin-top 0

    p:first-of-type
      margin-bottom 0

    img
      margin 10px 0
      max-width 100%

  ul
    margin-bottom 20px

    li
      font-size 17px
      line-height 1.6