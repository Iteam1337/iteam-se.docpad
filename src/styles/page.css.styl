@import "variable"

#content
  position relative
  padding-top 20px

#page
  .lead
    font-size 25px
    margin-top 0px
    margin-bottom 70px

    h2
      margin-top 0

  section
    padding 0

  li
    font-family serifFontStack
    line-height 1.75
    list-style circle
    margin-left 20px

  #connectedCases,
  #opportunities
    margin-top 40px

    .title
      font-size 1.2em
      margin 5px 0
      position relative
      width 180px

  #connectedCases
    margin-top 0

  #connectedCases
    ul
      li
        display inline-block
        float left
        margin 0 0 20px 0
        text-align center
        width 49%

        @media mobile
          width 48%

        &:nth-child(odd)
          margin-right 1%

  .page-content
    @media mobile
      h1, h4, #opportunities h2
        margin-top 0

    .map
      img 
        max-width 100%

      .certifications
        ul
          margin-top 20px

          li
            float left
            margin-bottom 20px
            width 49%

            &:nth-child(odd)
              margin-right 2%

  #opportunities
    margin-top 0

    h2
      margin-bottom 0

    .title
      top 0
      width auto
      font-family sansSerifFontStack

      &:hover
        color iorange

    ul
      li
        list-style none
        margin-left 0

  .operations-icon
    float right
    margin-left 20px
    width 75px

  .press
    li
      border-bottom 1px solid #ccc
      list-style none
      margin 0 0 20px 0

      .post-title
        display block
        margin 20px 0

    .git
      a
        border-radius(3px)
        box(border-box)

        background #f5f5f5
        border 1px solid rgba(0,0,0,0.15)
        color #333
        display block
        font-size 0.8em
        padding 10px
        width 100%

      .simple,
      .post-date
        display none

  .yarpp-related-rss,
  article a[rel="nofollow"]
    display none

  .common
    input,
    textarea
      box(border-box)

      width 100%

    input
      padding 20px 10px

    textarea
      height 200px

  .history
    margin-bottom 20px
    position relative

    .year
      left -80px
      position absolute

    .text
      font-size 0.8em

  .tjanster
    padding-top 70px

    @media mobile
      padding-top 0

    .offer
      padding 0
      padding-right 20px

      .title
        display inline-block
        font-size 1.2em
        line-height 1.2em
        margin -25px 0 20px 0

  #financialNumbers
    positioned('top','left',0,-60px,relative)

  .legend
    margin-top 20px
    > div
      display inline-block
      margin-right 20px

    .box
      display inline-block
      height 0px
      margin-right 10px
      width 10px

    .advice
      .box
        background #F38630

    .systemdevelopment
      .box
        background #E0E4CC

    .operations
      .box
        background #69D2E7

  .certification
    max-height 100px

  #about
    li
      list-style none
      margin-left 0

      @media mobile
        text-align center
        width 100%

      a
        display block
        font-size 1em
        margin-bottom 10px

    h4
      margin 40px 0 50px
      text-align center

      @media mobile
        font-size 27px
        margin 20px 0 30px

    input
      border none
      text-align center
      width 140px

      @media mobile
        display block
        margin-bottom 10px
        width 100%

      &:focus
        outline none