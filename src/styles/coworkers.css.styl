@import "variable"

.coworkers
  .coworker
    display inline-block
    margin-bottom 40px
    vertical-align top
    width 49%
    position relative

    &:nth-child(2n-1)
      margin-right 10px

    &:last-child
      margin-bottom 0

    p
      margin-bottom 0

    a
      display inline-block

      &:hover
        color #333

      &.portrait
        vertical-align top
        width 30%
        position absolute
        top 10px
        margin 0

      &.email
        font-size 0.8em

      .image
        border-radius 100px
        display inline-block
        vertical-align top
        width 100%

    .info
      display inline-block
      width 55%
      margin-left 25%
      padding 0 5%
      float right

#coworker

  #toAngular
    display none

  .desc,
  .github
    vendor("column-count", 2)
    vendor("column-gap", 50px)

  .top-part
    display block
    position relative
    min-width 100%
    height 100%
    margin 0 0 50px
    padding-top 0
    vertical-align top
    .left,
    .right
      max-width 25%
      position absolute
    .left
      top 150px
      left 0
      text-align left
    .right
      top 120px
      right 0
      text-align right

    .center
      display block
      width 60%
      margin 0 auto
      text-align center

      .job
        text-align center
        font-size 1.2em
      .name
        text-align center
        font-size 3.5em
        line-height 1.2em

  .image
    vendor("border-radius", 300px)
    border 10px solid #ffbd09
    margin -130px auto 20px
    padding 5px
    width 200px
    height 200px
    position relative
    z-index 1
    img
      vendor("border-radius", 200px)
      z-index 1
      width 200px
      position relative
      border 6px solid white
      margin -6px

  .sun
    border none
    text-align center
    background #ffbd09
    border-radius 0
    z-index 0
    width 200px
    height 200px
    padding 0
    margin 10px auto 40px

    img
      border 5px solid white
      left -5px
      top -5px

    &:after,
    &:before
      z-index 0
      top 0
      left 0
      height 200px
      width 200px
      background #ffbd09
      content ""
      position absolute
      trans rotate(30deg)

    &:after
      trans rotate(-30deg)

  .heart
    border none
    border-radius 0
    background transparent
    padding 0
    width 250px
    height 250px

    &:before,
    &:after
      top 0
      position absolute
      content ""
      width 150px
      height 250px
      background #D80829
      -moz-border-radius 100px 100px 0 0
      border-radius 100px 100px 0 0

    &:before
      left 125px
      trans rotate(-45deg)
      origin 0 100%

    &:after
      left -25px
      trans rotate(45deg)
      origin 100% 100%

    img
      left 35px
      top 11px
      width 175px
      height 175px
      border 5px solid white

  .social
    position relative
    margin 0
    width 100%
    display inline-block
    text-align left

  .social-media,
  .github,
  .cases
    margin-top 0
    padding-top 0
    position relative
    text-align center

  .social-media,
  .github,
  .cases,
  .social

    a
      transition color 300ms ease

      display inline-block
      color #666
      font-size 2em

      > div
        display inline-block
        margin-right 20px

      &:last-child
        > div
          margin-right 0

      &:hover
        color #ffbd09

  .social-media
    a
      margin 0 20px

  .github,
  .cases
    text-align left

    .git-title
      margin 0 0 10px
      font-size 1.15em

    .git
      vertical-align top
      width 100%
      display inline-block
      margin 0
      padding 0
      height auto
      &.single
        width 100%

      li
        min-height 30px

    .git
      li:before
        position absolute
        bottom 0
        left 0
        width 100%
        height 100%
        display block
        content ""
        vendor("box-shadow", inset 0 -15px 10px -10px white)

    li
      margin-bottom 10px
      position relative
      vertical-align top

      a
        color #ffbd09
        font-size 1em

        &:hover
          color #666

      .git-info
        width 85%
        max-height 50px
        overflow hidden


      p
        margin 10px 0 0
        line-height 1.8em
        font-size .9em

      .git-description,
      .git-message
        word-wrap break-word
        white-space pre-wrap

      .git-language
        margin-top 10px
        font-family "Monaco","Menlo","Consolas","Courier New","monospace"
        font-size 0.7em
        color #999

      .git-time
        color #999
        font-family "Palatino"
        font-size 0.6em
        position absolute
        top 0
        right 0
        width 20%
        text-align right

  .user-content
    &.multi
      vendor("column-count", 2)
      vendor("column-gap", 50px)
    li
      vertical-align top
      display inline-block
      text-align left
      width 44%
      padding 0 5% 5px 0
      margin 0
