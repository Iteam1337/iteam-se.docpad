@import "variable"

.coworkers
  .coworker
    size(49%, 150px)

    display inline-block
    margin-bottom 20px
    vertical-align top
    position relative

    @media mobile
      height auto

    &:nth-child(2n-1)
      margin-right:1%

    &:last-child, p
      margin-bottom 0

    a
      display inline-block

      &.portrait
        positioned('top','left',10px,10px)

        vertical-align top
        width 30%
        margin 0

      &.email
        font-family serifFontStack
        font-size 15px
        font-weight 100
        letter-spacing 0px
        line-height 1.6

      .image
        border-radius(100px)

        display inline-block
        float none
        margin-right 20px
        vertical-align top
        width 100%

    .info
      display inline-block
      width 64%
      margin 0
      padding 4% 3%
      float right

#coworker
  #toAngular
    display none

  .desc
    columns(2, 50px)

    h2:first-of-type
      margin-top 0

    p
      break-inside()

    h2#specialistkompetens
      break-before()

  .top-part
    display block
    position relative
    min-width 100%
    height 100%
    margin 0 0 50px
    padding-top 0
    vertical-align top
    .left,
    .right
      max-width 30%
    .left
      positioned('top','left',190px,0)

      text-align left
    .right
      positioned('top','right',160px,0)

      text-align right

    .center
      display block
      width 60%
      margin 0 auto
      text-align center

      .job
        text-align center
        font-size 1.2em
      .name
        font-size 3.5em
        line-height 1.2em
        margin-top 0
        position relative
        text-align center

  .image
    border-radius(300px)
    box(content-box)
    size(200px)

    border 10px solid #ffbd09
    margin -130px auto 20px
    padding 5px
    position relative
    z-index 1

    img
      border-radius(200px)
      box(content-box)

      z-index 1
      width 200px
      position relative
      border 6px solid white
      margin -6px

    &:hover
      &:before
        border-radius(200px)
        positioned('top','left',0,0)
        size(100%)

        background-color white
        background-image url("/content/images/svg/phone.svg")
        background-repeat no-repeat
        background-size 100px
        background-position 50%
        content ""
        display block
        z-index 10

  .social-buttons
    display inline-block
    font-size 2em
    line-height 1em
    margin 25px 0 0
    padding 0
    position relative
    text-align left
    width 100%
    a
      size(auto)

      margin 0 0 0 25px
      padding 0

  .social-media,
  .github,
  .cases
    margin-top 0
    padding-top 0
    position relative
    text-align center

  .social-media,
  .github,
  .cases
    a
      trans(color 300ms ease)

      color #666
      display inline-block
      font-size 2em

      > div
        display inline-block
        margin-right 20px

      &:last-child
        > div
          margin-right 0

      &:hover
        color #ffbd09

  .social-media
    a
      margin 0 20px
      width 29%

  .github,
  .cases
    text-align left

    .git-title
      margin 0 0 10px
      font-size 1.15em

    .git
      display inline-block
      height auto
      margin 0
      padding 0
      vertical-align top
      width 100%
      &.single
        width 100%

      li
        min-height 30px
        &:before
          positioned('bottom','left',0,0)
          size(100%)
          vendor("box-shadow", inset 0 -15px 10px -10px white)

          content ""
          display block

    .git-info
      width 85%
      max-height 50px
      overflow hidden

    .git-description,
    .git-message
      text-overflow()

    .git-language
      margin-top 10px
      font-family monospaceFontStack
      font-size 0.7em
      color #999

    .git-time
      positioned('top','right',0,0)

      color #999
      font-family serifFontStack
      font-size 0.6em
      text-align right
      width 20%

    li
      margin-bottom 10px
      position relative
      vertical-align top

      a
        color #ffbd09
        font-size 1em

        &:hover
          color #666

      p
        font-size .9em
        line-height 1.8em
        margin 10px 0 0

  .user-content
    margin 20px 0 !important
    padding 0
    width 100%
    &.multi ul
      box(border-box)

      display inline-block
      margin 0
      padding 0 25px 0 0
      vertical-align top
      width 49%

      &:nth-child(2n)
        padding 0 0 0 25px
    li
      box(border-box)

      display inline-block
      margin 0
      padding 0 0 5px 25px
      text-align left
      vertical-align top
      width 49%

      &:nth-child(2n)
        padding 0 25px 5px 0

    &.github li
      padding 0 0 5px
      width 100%
