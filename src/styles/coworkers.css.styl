@import "variable"

.coworkers
  .coworker
    display inline-block
    margin-bottom 20px
    vertical-align top
    position relative
    margin-right 10px
    height 150px
    width 31%
    &:nth-child(2n)


    background-color rgba(150, 150, 150, .05)
    border 1px solid rgba(150, 150, 150, .07)
    border-radius 3px
    &:hover
      background-color rgba(150, 150, 150, .1)
      border 1px solid rgba(150, 150, 150, .12)
    box(border-box)

    &:last-child
      margin-bottom 0

    p
      margin-bottom 0

    a
      display inline-block

      &:hover
        color #333

      &.portrait
        vertical-align top
        width 30%
        position absolute
        top 10px
        margin 0
        left 10px


      &.email
        font-family serifFontStack
        line-height 1.6
        font-size 15px
        font-weight 100
        letter-spacing 0px

      .image
        border-radius 100px
        display inline-block
        vertical-align top
        width 100%
        float none
        margin-right 20px

    .info
      display inline-block
      width 55%
      margin 0
      padding 0 5%
      float right

#coworker

  #toAngular
    display none

  .desc
    vendor("column-count", 2)
    vendor("column-gap", 50px)

  .top-part
    display block
    position relative
    min-width 100%
    height 100%
    margin 0 0 50px
    padding-top 0
    vertical-align top
    .left,
    .right
      max-width 30%
      position absolute
    .left
      top 150px
      left 0
      text-align left
    .right
      top 120px
      right 0
      text-align right

    .center
      display block
      width 60%
      margin 0 auto
      text-align center

      .job
        text-align center
        font-size 1.2em
      .name
        text-align center
        font-size 3.5em
        line-height 1.2em

  .image
    vendor("border-radius", 300px)
    border 10px solid #ffbd09
    margin -130px auto 20px
    padding 5px
    width 200px
    height 200px
    position relative
    z-index 1

    img
      vendor("border-radius", 200px)
      z-index 1
      width 200px
      position relative
      border 6px solid white
      margin -6px

    &:hover
      &:before
        vendor("border-radius", 200px)
        z-index 10
        position absolute
        left 0
        top 0
        content ""
        display block
        width 100%
        height 100%
        background-color white
        background-image url("/content/images/svg/phone.svg")
        background-repeat no-repeat
        background-size 100px
        background-position 50%

  .sun
    border none
    text-align center
    background #ffbd09
    border-radius 0
    z-index 0
    width 200px
    height 200px
    padding 0
    margin 10px auto 40px

    img
      border 5px solid white
      left -5px
      top -5px

    &:after,
    &:before
      z-index 0
      top 0
      left 0
      height 200px
      width 200px
      background #ffbd09
      content ""
      position absolute
      trans rotate(30deg)

    &:after
      trans rotate(-30deg)

  .heart
    border none
    border-radius 0
    background transparent
    padding 0
    width 250px
    height 250px

    &:before,
    &:after
      top 0
      position absolute
      content ""
      width 150px
      height 250px
      background #D80829
      -moz-border-radius 100px 100px 0 0
      border-radius 100px 100px 0 0

    &:before
      left 125px
      trans rotate(-45deg)
      origin 0 100%

    &:after
      left -25px
      trans rotate(45deg)
      origin 100% 100%

    img
      left 35px
      top 11px
      width 175px
      height 175px
      border 5px solid white

  .social-buttons
    position relative
    margin 25px 0 0
    padding 0
    width 100%
    display inline-block
    text-align left
    font-size 2em
    line-height 1em
    a
      padding 0
      margin 0 0 0 25px
      height auto
      width auto

  .social-media,
  .github,
  .cases
    margin-top 0
    padding-top 0
    position relative
    text-align center

  .social-media,
  .github,
  .cases

    a
      transition color 300ms ease

      display inline-block
      color #666
      font-size 2em

      > div
        display inline-block
        margin-right 20px

      &:last-child
        > div
          margin-right 0

      &:hover
        color #ffbd09

  .social-media
    a
      margin 0 20px
      width 29%

  .github,
  .cases
    text-align left

    .git-title
      margin 0 0 10px
      font-size 1.15em

    .git
      vertical-align top
      width 100%
      display inline-block
      margin 0
      padding 0
      height auto
      &.single
        width 100%

      li
        min-height 30px
        &:before
          position absolute
          bottom 0
          left 0
          width 100%
          height 100%
          display block
          content ""
          vendor("box-shadow", inset 0 -15px 10px -10px white)

    .git-info
      width 85%
      max-height 50px
      overflow hidden

    .git-description,
    .git-message
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

    .git-language
      margin-top 10px
      font-family monospaceFontStack
      font-size 0.7em
      color #999

    .git-time
      color #999
      font-family serifFontStack
      font-size 0.6em
      position absolute
      top 0
      right 0
      width 20%
      text-align right

    li
      margin-bottom 10px
      position relative
      vertical-align top

      a
        color #ffbd09
        font-size 1em

        &:hover
          color #666

      p
        margin 10px 0 0
        line-height 1.8em
        font-size .9em

  .user-content
    width 100%
    margin 20px 0 !important
    padding 0
    &.multi
      ul
        box(border-box)
        width 49%
        margin 0
        padding 0 25px 0 0
        display inline-block
        vertical-align top
        &:nth-child(2n)
          padding 0 0 0 25px
    li
      box(border-box)
      vertical-align top
      display inline-block
      text-align left
      width 49%
      padding 0 0 5px 25px
      margin 0
      &:nth-child(2n)
        padding 0 25px 5px 0

    &.github
      li
        width 100%
        padding 0 0 5px
