@import "variable"

.index
  .container
    max-width 720px
    margin -50px auto 50px
    min-height 376px
    p
     max-width none
    img
      max-width 100%
      max-height 100%
      margin 0 auto
    h1
      font-size 3em
      line-height 1.2em
      margin-bottom 1em

  .rn-carousel-container
    border none
    position relative
    margin-bottom 20px
    background-color #444

    .image
      height 450px
      li
        background-color #444
        background-position 50% 50%
        background-repeat no-repeat
        vendor("background-size", cover)

    .layer
      display table
      height 100%
      width 100%
      top -10px
      position relative
      text-align center
      margin 0
      padding 0
      .link
        display table-cell
        vertical-align middle
        &.invert
          a
            color white
            text-shadow 0 0 1px rgba(0, 0, 0, 0.3)
        a
          font-size 1em
          white-space nowrap
          line-height 1.2em
          position relative
          color #666
          text-shadow 0 0 1px rgba(255, 255, 255, 0.3)
          &.case-title
            font-size 4em
            display block
          &.separator-before:before
            content "Â·"
            width 10px
            display inline-block


    .rn-carousel-indicator
      background none
      position absolute
      top 5px

      span
        color #fff
        text-shadow 0px 0px 2px #555
        &.active
          color _orange
          text-shadow 0px 0px 2px #222

  .instagram-feed
    height 100%
    a
      width 23%
      margin 0
      padding 0 1%
      height 200px
      display inline-block
      text-align center
      img
        max-width 100%
        max-height 200px
        margin 0 auto
        height auto