@import "variable"

.index
  .container
    max-width 720px
    margin -50px auto 50px
    min-height 376px
    p
     max-width none
    img
      max-width 100%
      max-height 100%
      margin 0 auto

  .rn-carousel-container
    border none
    position relative
    margin-bottom 20px
    background-color #444

    .image
      height 500px
      li
        background-color #444
        background-position 50% 50%
        background-repeat no-repeat
        vendor("background-size", contain)

    .rn-carousel-indicator
      background none
      position absolute
      bottom 35px

      span
        color #999
        text-shadow 0 0 4px gray
        &.active
          color _orange

  .instagram-feed
    height 100%
    a
      width 23%
      margin 0
      padding 0 1%
      height 200px
      display inline-block
      text-align center
      img
        max-width 100%
        max-height 200px
        margin 0 auto
        height auto