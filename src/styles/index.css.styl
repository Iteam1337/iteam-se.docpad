@import "variable"

.index
  #main-holder
    background-position 50% 50%
    background-size cover
  .container
    box(border-box)
    background-color transparent
    margin 0 auto
    max-width 1170px
    min-height 376px
    padding 20px

    p
      max-width none

    img
      max-width 100%
      max-height 100%
      margin 0 auto
    h1
      font-size 3em
      line-height 1.2em
      margin-bottom 1em

    .two-column
      p
        column(2)

  .instagram-feed
    a
      width 25%
      margin 0
      padding 0
      display inline-block
      text-align center
      img
        border 2px solid white
        max-width 100%
        margin 0 auto
        height auto