@import "variable"

.index
  #main-holder
    background-position 50% 50%
    background-size cover
    
  .container
    box(border-box)
    background-color transparent
    margin 0 auto
    max-width width
    min-height 376px
    padding 20px

    .two-column p
      column()
      max-width none

      @media mobile
        column(1,0);

    img
      max-width 100%
      max-height 100%
      margin 0 auto
    h1
      font-size 3em
      line-height 1.2em
      margin-bottom 1em

  #footer-holder
    padding 0 20px
    max-width width

    #footer
      max-width width
      padding 40px 20px 0