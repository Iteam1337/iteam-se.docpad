@import "variable"

.index
  .background-image
    top -103px
    height 625px
    max-height 625px
    background-position 50%
  .container
    max-width 720px
    margin 100px auto -50px
    min-height 376px
    p
     max-width none
    img
      max-width 100%
      max-height 100%
      margin 0 auto

  .image
    height 500px
    li
      background-color white
      background-position 50% 50%
      background-repeat no-repeat
      vendor("background-size", contain)

  .rn-carousel-container
    border none
    *
      border none
    .rn-carousel-indicator
      opacity 0.1
      margin-top 20px
      vendor("transition", opacity 300ms ease)
    &:hover > .rn-carousel-indicator
      opacity 1


  .instagram-feed
    height 100%
    a
      width 31%
      margin 0
      padding 0 1%
      height 200px
      display inline-block
      text-align center
      img
        max-width 100%
        max-height 200px
        margin 0 auto
        height auto