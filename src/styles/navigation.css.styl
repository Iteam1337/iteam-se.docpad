@import 'variable'

#header
  color #000
  height 51px
  left 0
  position fixed
  top 0
  width 100%
  z-index 10

  #logo
    position absolute
    left 10px
    top 8px
    z-index 20
    
    background url('/content/images/ovrigt/iteam_logo.png') no-repeat
    background none, url('/content/images/svg/iteam_logo.svg') no-repeat
    background-size 90px
    height 30px
    width 100px

    @media mobile
      height 20px
      left 10px
      top 15px
      width auto

.navbar-static-top
  background #333
  position static
  margin-bottom 0

  .navbar-inner
    margin 0 auto
    position relative
    width 100%
    
    .logoAndMenu
      border none
      display none
      padding 5px 10px
      position relative
      height 50px
      line-height 1
      z-index 15

      @media mobile
        display block

      .btn-navbar
        box-sizing()

        position absolute
        right 10px
        top 7px
        background #333
        border none
        height 35px
        margin-bottom 0
        padding 8px 6px
        text-shadow none
        width 35px
        z-index 50

        .icon-bar
          display block
          width 100%
          height 3px
          margin-top 3px
          background-color #F5F5F5

    ul.nav
      float none
      margin 5px auto 0
      max-width 1060px
      text-align center

      > li
        display inline-block
        float none

        a.active
          color iorange
        &:last-child
          font-size 0.75rem
          position absolute
          right 20px

        > a
          color #999

          &:focus, &:hover
            color iorange
            background none

        @media mobile
          display block
          text-align left

          &:last-child
            position relative
            right auto
            top 0

            a
              color #999
              font-size 1rem

      a
        color #fff

      .e-chevron-thin-right
        display none

#navSubpages
  background #444
  font-size 0.8em
  padding 10px
  text-align center

  @media mobile
    display none

  .subpage-inner
    margin 0 auto
    position relative

    a
      color #fff
      display inline-block
      margin 5px 0
      padding

      &.active,
      &:hover
        color #ffbd09

      &:not(:last-child)
        margin-right 20px