@import "variable"

@media (max-width:980px)
  .case-index
    p,
    h2
      max-width 100%

  #cases .case
    display inline-block
    margin-right 1%
    margin-left 1%
    vertical-align top
    width 47%

    &:nth-child(3n)
      margin 0

    .case-image
      max-height 120px
      width auto
      left 0

    .case-about
      width 100%

  .coworkers .coworker
    margin-right 20px
    width 47%

    &:nth-child(2n-2)
      margin-right 0

  #page #connectedCases ul li
    margin-right 20px
    width 45%

    &:nth-child(2n+2)
      margin-right 0

/**
 * iPad landscape
 */
@media (max-width:1199px) and (min-width:980px)
  #coworker .social-media a
    width 27%

/**
 * iPad landscape
 */
@media (max-width:979px) and (min-width:768px)
  #footer-holder
    margin-top 20px
    width 724px
    #footer
      padding 40px 0 0

  #case
    img
      &.right
        float right
        position relative
        right 0
        width 300px
    .about
      width 100%

@media(max-width:979px)
  #coworker .social-media a
    width 100%
    margin 0
    padding 0

  .index
    .container
      min-height 0
      padding 0

    #footer
      margin-top 0
      padding-top 0

  .container
    .page-content
      .text,
      .left-part
        width 100%
      .info,
      .right-part
        width 100%
        padding 0

  .medarbetare-index
    .container
      .page-content
        .info
          width 60%

  #coworker
    .desc
      column(1,0)

    .user-content.multi
      width 100%

    .github .git-time
      position relative
      text-align left
      width auto

    .top-part
      .center
        width 100%
        margin-bottom 60px

      .left,
      .right
        top inherit
        vertical-align bottom
        max-width none
        width 50%

      .left
        bottom -50px
      .right
        bottom -65px
        .social-buttons
          text-align center
        .social
          text-align right

  #case
    .content
      .about,
      .quote
        width 100%
        float none
      .quote blockquote
        text-align left

      .gallery
        padding-top 0
        .image
          margin-right 10px
          width 48%

      .twitter .tweets li
        width 100%
        max-width 370px
      .twitter,
      .relatedServices,
      .team
        margin-top 0 !important
        padding 20px 0

        li
          margin-left 0 !important
          padding 0 !important
          width 100%

/**
 * iPad portrait
 */
@media (max-width:767px)

  .index
    .background-image
      background-position left bottom

    .container
      padding 20px

      p
        two-column(1,0)

  body
    padding 0


  #coworker
    .user-content
      &.multi ul,
      &.multi li,
      ul,
      li
        width 100%
        margin 0
        padding 0 !important

    .social-media
      a
        padding 0 10px 10px

  .background-image
    background-position 50% 0

  .container
    padding 0 20px

  .coworkers
    .coworker
      margin-left 0
      padding 0
      width 100%

      .info
        float left
        margin-left 25px

      a
        .image,
        &.portrait
          float left
          max-height 100px
          max-width 100px
          position relative

  #coworker .github .git
    width 100%
    &:last-child
      margin-left 0

  #case
    .content
      .about
        height 100%
        margin-bottom 20px
        img
          position relative
          width 100%
        .about-text
          display block
          position relative
          max-height none
          width 100%

  .visible-phone
    display none !important