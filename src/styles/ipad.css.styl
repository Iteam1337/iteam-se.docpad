@import "variable"

@media (max-width:980px)
  .case-index
    p,
    h2
      max-width 100%

  #cases
    .case
      display inline-block
      margin-right 1%
      margin-left 1%
      vertical-align top
      width 47%

      &:nth-child(3n)
        margin 0

      .case-image
        translate-pos(0,-50%)
        display block
        margin 0 auto
        max-height 120px
        width auto
        left 0

      .case-about
        width 100%

  .coworkers
    .coworker
      margin-right 20px
      width 47%

      &:nth-child(2n-2)
        margin-right 0

      &:nth-child(3n+3)
        margin-right 20px

/**
 * iPad landscape
 */
@media (max-width:1199px) and (min-width:980px)
  #coworker
    .social-media
      a:last-child
        display none


/**
 * iPad landscape
 */
@media (max-width:979px) and (min-width:768px)
  #case
    img
      &.right
        float right
        position relative
        right 0
        width 300px
    .about
      width 100%
  #coworker
    .social-media
      a:last-child
        display none

@media(max-width:979px)
  .index
    .container
      min-height 0
      padding 0

    .rn-carousel-container
      .right
        right -5px

  .container
    .page-content
      .text,
      .left-part
        width 100%
      .info,
      .right-part
        width 100%
        padding 0

  .medarbetare-index
    .container
      .page-content
        .info
          width 60%

  #coworker
    .desc
      vendor("column-count", 1)
      vendor("column-gap", 0)

    .user-content.multi
      width 100%

    .top-part
      .center
        width 100%
        margin-bottom 60px

      .left,
      .right
        top inherit
        vertical-align bottom
        max-width none
        width 50%

      .left
        bottom -50px
      .right
        bottom -65px
        .social-buttons
          text-align center
        .social
          text-align right

  #case
    .content
      .about,
      .quote
        width 100%
        float none
      .quote
        blockquote
          text-align left

      .twitter
        .tweets
          li
            width 100%
            max-width 370px
      .twitter,
      .relatedServices,
      .team
        li
          margin-left 0 !important

  #footer
    margin-top 0
    padding-top 0

/**
 * iPad portrait
 */
@media (max-width:767px)

  .index
    .background-image
      background-position left bottom

  #header

    .nav
      text-align right

    .brand
      float left
      position relative

  body
    padding 0


  #coworker
    .user-content
      &.multi ul,
      &.multi li,
      ul,
      li
        width 100%
        margin 0
        padding 0 !important

    .social-media
      a
        padding 0 10px 10px

  .background-image
    background-position 50% 0

  .container
    padding 0 20px

  .coworkers
    .coworker
      width 100%
      margin-left 0
      padding 0

      .info
        float left
        margin-left 15px

      a
        .image,
        &.portrait
          max-height 100px
          max-width 100px
          float left
          position relative

  #coworker .github .git
    width 100%
    &:last-child
      margin-left 0

  #case
    .content
      .about
        height 100%
        margin-bottom 20px
        img
          position relative
          width 100%
        .about-text
          position relative
          max-height none
          width 100%
          display block

  .visible-phone
    display none !important