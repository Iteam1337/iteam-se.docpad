@import "variable"

.modal
  background-color transparent
  text-align center
  line-height 0
  z-index 1050
  outline none
  position fixed
  top 0 !important
  min-height 100%
  min-width 100%
  max-width 100%
  max-height 100%
  width 100%
  height 100%
  margin 0
  padding 0
  display none
  box(border-box)
  box-shadow none
  border-radius none
  background-clip none


  &.fade
    left -100%
    &.in
      left 0

.modal-body
  background-color #fff
  border none
  max-height none
  min-height none
  width 90% !important
  height 90% !important
  max-height 90% !important
  padding 0
  display block
  margin 2% 0 0 2%
  position relative

  box(border-box)
  vendor("border-radius", 0)
  vendor("background-clip", padding-box)
  vendor("box-shadow", none)
  vendor("box-pack", center)
  vendor("box-align", center)
  .rn-carousel-container
    height 100%
    width 100%
    max-height 100%
    max-width 100%
    overflow hidden
    display block
    margin 0
    padding 0
    .ul,
    .li
      max-height 100%
      overflow hidden
      display block
      margin 0
      padding 0
  .btn
    position fixed
    top 5px
    right 5px
