@import "variable"

.modal
  border-radius(0)
  box(border-box)
  max-size(100%,100%,100%,100%)
  shadow(none)

  background-clip none
  background-color transparent
  display none
  height 100%
  line-height 0
  margin 0
  outline none
  padding 0
  position fixed
  text-align center
  top 0 !important
  z-index 1050
  width 100%

  &.fade
    left -100%
    &.in
      left 0

.modal-body
  border-radius(0)
  box(border-box)
  max-size(0, none, none, '90% !important')
  shadow(none)
  size('90% !important','90% !important')

  vendor("background-clip", padding-box)
  vendor("box-pack", center)
  vendor("box-align", center) 

  background-color #fff
  border none
  display block
  margin 2% 0 0 2%
  padding 0
  position relative

  .rn-carousel-container
    max-size(0, 100%, 0, 100%);
    size(100%)

    display block
    margin 0
    overflow hidden
    padding 0
    .ul,
    .li
      display block
      margin 0
      max-height 100%
      overflow hidden
      padding 0
  .btn
    positioned('top','right', 5px, 5px, fixed)
