@import "variable"

@keyframes animatein
  0%
    opacity 0
    left -100px
  100%
    opacity 1
    left 0px

@keyframes fadein
  0%
    left -100%
    vendor("transform", scale(0))
  100%
    left 0
    vendor("transform", scale(1))


@keyframes fadeout
  0%
    vendor("transform", scale(1))
  100%
    vendor("transform", scale(0.95))

@keyframes slidein
  0%
    left -100%
  100%
    left 0

@keyframes slideout
  0%
    right 0
  100%
    right -100%

.ng-cloak
  display none !important

/* Navbar
---------------------------------------------*/
#header
  box(border-box)

  background #333
  padding-bottom 10px
  position relative

  .header-inner
    margin 0 auto
    max-width 1170px

  .brand
    float left
    position relative
    z-index 1
    padding 5px 15px
    top 5px

  .nav,
  .subnav
    text-align right
    vertical-align top

    a
      color #ccc
      display inline-block
      margin 0
      height auto

      &:last-child
        margin 0

      &.active,
      &:hover
        color #ffbd09

      a:hover
        background none
        color #333

  .nav
    position relative
    text-align center
    top 6px
    margin 0
    padding 0
    a
      padding 15px

  .subnav
    z-index 10
    background #2b2b2b
    font-size 0.6em
    margin 0
    a
      padding 4px 15px

    .subnav-inner
      margin 0 auto
      max-width 1170px

      .btn
        shadow(none)

        background #666
        border none
        border-radius 0
        margin 0
        padding 5px 10px
        position relative
        text-shadow none

  .openMobileNav
    display none

#navSubpages
  background #444
  font-size 0.8em
  padding 10px
  text-align center

  .subpage-inner
    margin 0 auto
    max-width 850px

    a
      color #fff
      display inline-block
      margin 5px 0

      &.active,
      &:hover
        color #ffbd09

      &:not(:last-child)
        margin-right 20px

#mobileNav,
#subpageWrap
  display none
  z-index 10
  position relative

/* Layout
---------------------------------------------*/
.row
  margin 0 !important
#nowplaying
  font-size 1em
  padding  40px 0 0

  > a
    display inline-block
    margin-right 20px
    vertical-align top
    width 20%

  #wejay
    margin-right 20px

  .info
    display inline-block

    p
      margin 0

    a
      display block
      line-height 1.5

#footer
  margin 40px auto
  max-width 1170px
  padding 40px 20px 0
  position relative

  > div
    display inline-block
    vertical-align top

  #address
    margin 0
    width 40%

    li
      font-size 0.8em
      margin-bottom 5px

      &.company
        font-size 1em
        margin-bottom 10px

  #followUs
