@import "variable"

@keyframes animatein
  0%
    opacity 0
    left -100px
  100%
    opacity 1
    left 0px

@keyframes animateup
  0%
    margin-top 300px
  100%
    margin-top 30px

@keyframes fadein
  0%
    trans(scale(0))
    left -100%
  100%
    trans(scale(1))
    left 0


@keyframes fadeout
  0%
    trans(scale(0))
  100%
    trans(scale(0.95))

@keyframes slidein
  0%
    left -100%
  100%
    left 0

@keyframes slideout
  0%
    right 0
  100%
    right -100%

/* Layout
---------------------------------------------*/
.row
  margin 0 !important


section
  padding-top: 70px;
  padding-botttom: 70px;

#nowplaying
  font-size 1em
  padding 40px 0 0

  > a
    display inline-block
    margin-right 20px
    vertical-align top
    width 20%

  #wejay
    margin-right 20px

  .info
    display inline-block

    p
      margin 0

    a
      display block
      line-height 1.5

#footer .row
  > div
    display inline-block
    vertical-align top

    @media mobile
      display block
      margin-top 20px

  #address

    @media mobile
      width 100%

    li
      font-size 0.8em
      margin-bottom 5px

      &.company
        font-size 1em
        margin-bottom 10px

  #followUs
    text-align right

    @media mobile
      text-align center

    .e-mail
      positioned('top', 'right', 4px, 0, relative)

      font-size 1.2em

    > a
      vendor("transition", color 300ms ease)

      color #999
      display inline-block
      font-size 2em

      &:not(:last-child)
        margin-right 20px

      &:hover
        color _orange

#subpages
  margin-bottom  20px
  padding 10px 0

  li
    display inline-block
    margin-right 20px

    &:not(:last-child)
      border-right 1px solid #ccc
      padding-right 20px

.container
  box(border-box)

  background-color white
  margin-top -120px
  position relative
  padding 25px 55px
  max-width 1060px
  z-index 1

  @media mobile
    margin-top 0
    padding 15px 20px

  .content > h1
    positioned('top','left',-140px,0)

    font-size 4em
    line-height 1.2em
    text-shadow 1px 1px 1px rgba(255, 255, 255, 0.3)
    white-space nowrap
    
    @media mobile
      font-size 2.3em !important
      margin 0
      text-shadow none !important
      top -120px
      white-space normal !important 

    &.invert
      color white
      text-shadow 1px 1px 1px rgba(0, 0, 0, 0.3)

    small
      color inherit

  .page-content
    .top
      width 100%
    .text,
    .left-part
      float left
      width 50%
      vertical-align top
      margin 0
      padding 0
    .right-part
      display inline-block
      width 40%
      margin 0
      padding 0 5%
      float right
      vertical-align top
    .fluff
      width 100%
      display block
      float none
      clear both
      padding-top 1px

  .content .text iframe
    max-width 100%
    display inline-block

.header
  display block
  width 100%
  text-align center
  .title
    line-height 1.2em
    text-align center
    width 100%
    margin 0 auto 5px
    display block
    padding 40px 0

.split
  border-top 1px solid rgba(204, 204, 204, .2)
  margin-top 20px

body[class^="medarbetare"] > #main-holder > .container, .single-case
  animate(animatein, 1s)

  @media mobile
    animate(none, 0)


#top-holder,
#footer-holder,
.offset
  width 100%
  min-width 0
  display block
  clear both
  position relative
  background-color white

.offset
  height 42px
  z-index -120

#top-holder,
#footer-holder,
#footer
  
  box(border-box)
  *
    box(border-box)

#top-holder
  position fixed
