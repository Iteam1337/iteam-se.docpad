@import "variable"

@keyframes fadein
  from
    background rgba(255,255,255,0)
  to
    background rgba(255,255,255,1)

@keyframes fadeout
  from
    background rgba(255,255,255,1)
  to
    background rgba(255,255,255,0)


@keyframes image-fadein
  0%
    opacity 0
  20%
    opacity 0
  100%
    opacity 1

@keyframes image-fadeout
  0%
    opacity 1
  80%
    opacity 0
  100%
    opacity 0

/* Navbar
---------------------------------------------*/
#header
  box(border-box)

  background #333
  padding-bottom 10px
  position relative

  .header-inner
    margin 0 auto
    max-width 1170px

  .brand
    float left
    position relative
    z-index 1
    padding 5px 15px

  .nav,
  .subnav
    text-align right
    vertical-align top

    a
      color #ccc
      display inline-block
      margin 0
      height auto

      &:last-child
        margin 0

      &.active,
      &:hover
        color #ffbd09

      a:hover
        background none
        color #333

  .nav
    position relative
    text-align center
    top 6px
    margin 0
    padding 0
    a
      padding 15px

  .subnav
    z-index 10
    background #2b2b2b
    font-size 0.6em
    margin 0
    a
      padding 4px 15px

    .subnav-inner
      margin 0 auto
      max-width 1170px

      .btn
        shadow(none)

        background #666
        border none
        border-radius 0
        margin 0
        padding 5px 10px
        position relative
        text-shadow none

  .openMobileNav
    display none

#navSubpages
  background #444
  font-size 0.8em
  padding 10px
  text-align center

  .subpage-inner
    margin 0 auto
    max-width 850px

    a
      color #fff
      display inline-block
      margin 5px 0

      &.active,
      &:hover
        color #ffbd09

      &:not(:last-child)
