@import "variable"

@keyframes animatein
  from
    left -100px
    opacity 0
  to
    left 0px
    opacity 1

/* Navbar
---------------------------------------------*/
#header
  box(border-box)

  background #333
  padding-bottom 10px
  position relative

  .header-inner
    margin 25px auto 0 auto
    max-width 700px

  .brand
    float left
    position relative
    top -10px
    z-index 1

  .nav,
  .subnav
    text-align right
    vertical-align top

    a
      color #ccc
      display inline-block
      margin-right 30px
      height auto

      &:last-child
        margin 0

      &.active,
      &:hover
        color #ffbd09

      a:hover
        background none
        color #333

  .nav
    left -60px
    position relative
    text-align center
    top 4px

  .subnav
    z-index 10
    background #2b2b2b
    font-size 0.6em
    margin 0

    .subnav-inner
      margin 0 auto
      max-width 1170px

      .btn
        shadow(none)

        background #666
        border none
        border-radius 0
        margin 0
        padding 5px 10px
        position relative
        text-shadow none

  .openMobileNav
    display none

#navSubpages
  background #444
  font-size 0.8em
  padding 10px
  text-align center

  .subpage-inner
    margin 0 auto
    max-width 850px

    a
      color #fff
      display inline-block
      margin 5px 0

      &.active,
      &:hover
        color #ffbd09

      &:not(:last-child)
        margin-right 20px

#mobileNav,
#subpageWrap
  display none
  z-index 10
  position relative

/* Layout
---------------------------------------------*/
#nowplaying
  font-size 1em
  padding  40px 0 0

  > a
    display inline-block
    margin-right 20px
    vertical-align top
    width 20%

  #wejay
    margin-right 20px

  .info
    display inline-block

    p
      margin 0

    a
      display block
      line-height 1.5

.container
  margin-top 40px
  max-width 700px

#footer
  margin 40px auto
  max-width 700px
  padding-top 40px

  > div
    display inline-block
    vertical-align top

  #address
    margin-right 20px
    width 65%

    li
      font-size 0.8em
      margin-bottom 5px

      &.company
        font-size 1em
        margin-bottom 10px

  #followUs
    text-align right
    width 30%

    > a
      -webkit-transition color 300ms ease

      color #999
      display inline-block
      font-size 2em

      &:not(:last-child)
        margin-right 20px

      &:hover
        color  #ffbd09

#subpages
  margin-bottom  20px
  padding  10px 0

  li
    display inline-block
    margin-right 20px

    &:not(:last-child)
      border-right 1px solid #ccc
      padding-right 20px

#github
  display none

.background-image
  z-index 0
  position absolute
  width 100%
  height 450px
  max-height 450px
  min-height 450px
  display block
  overflow hidden
  background-repeat no-repeat
  background-color white
  background-position 50% 50%
  vendor("background-size", cover)

.container
  background-color white
  z-index 1
  position relative
  padding 15px 55px
  margin-top 190px

  .main-title
    position absolute
    margin-top -70px
    font-size 4em
    white-space nowrap
    small
      color inherit

  .page-content
    .text,
    .left-part
      float left
      width 50%
      vertical-align top
      margin 0
      padding 0
    .info,
    .right-part
      display inline-block
      width 40%
      margin 0
      padding 0 5%
      float right
      vertical-align top
    .fluff
      width 100%
      display block
      float none
      clear both
      padding-top 1px


.single-case
  vendor("animation-duration", 1s)
  vendor("transform-origin", 50% 50%)
  vendor("animation-iteration-count", 1)
  vendor("animation-timing-function", ease)
  vendor("animation-name", animatein)