    > a
      vendor("transition", color 300ms ease)

      color #999
      display inline-block
      font-size 2em

      &:not(:last-child)
        margin-right 20px

      &:hover
        color _orange

#subpages
  margin-bottom  20px
  padding  10px 0

  li
    display inline-block
    margin-right 20px

    &:not(:last-child)
