@import "variable"

@font-face
  font-family: "AvantGarde ExtraLight";
  src: url("/content/fonts/lte52009.ttf") format("truetype");

@font-face
  font-family: "Tex Gyre Adventor Regular";
  src: url('/content/fonts/texgyreadventor-regular-webfont.eot');
  src: url('/content/fonts/texgyreadventor-regular-webfont.eot?#iefix') format('embedded-opentype'),
    url('/content/fonts/texgyreadventor-regular-webfont.woff') format('woff'),
    url('/content/fonts/texgyreadventor-regular-webfont.ttf') format('truetype'),
    url('/content/fonts/texgyreadventor-regular-webfont.svg#texgyreadventorregular') format('svg');
  font-weight: normal;
  font-style: normal;


/* General
---------------------------------------------*/
a,
a:link
  color orange
  cursor pointer
  text-decoration none

a.btn
  box border-box

  background orange
  color #fff
  display inline-block
  font-size 12px
  margin-right 20px

a.tag
  border-radius(3px)
  box(border-box)
  transition(background 300ms ease)

  background rgb(153, 153, 153)
  border-style none none solid
  border-width 0px 0px 1px
  color white
  display inline-block
  font-family regularFontStack
  font-size 14px
  font-weight 400
  line-height 39px
  height 40px
  padding 0px 20px
  position relative
  text-align center
  vertical-align bottom
  width 100%

  &:hover
    background _orange

  &.remote
    margin-right 20px
    width 25%

    @media mobile
      display block
      margin-bottom 10px
      width 100%

body,
html
  background #fff
  font-family sansSerifFontStack
  font-size 1em
  height 100%
  position relative

body
  color #666

blockquote
  p
    font-size 18px
    line-height 1.6

p
  color #666
  font-family serifFontStack
  font-size 17px
  font-weight 100
  letter-spacing 0
  line-height 1.6
  margin-bottom 20px
  max-width 450px

ul
  list-style none
  margin 0
  padding 0

pre
  margin-bottom 20px

/* Headings
---------------------------------------------*/
h1,
h2,
h3,
h4
  font-weight normal
  font-family sansSerifFontStack

h2
  font-size 24px

h3
  font-size 20px

h4
  font-size 16px

/* Icons
---------------------------------------------*/
.e-mail,
.e-mailme,
.e-phone,
.e-alert,
.e-chevron-thin-right,
.e-chevron-thin-left,
.e-list,
.e-github,
.e-twitter,
.e-facebook,
.e-linkedin,
.e-instagram
  transition(opacity 300ms ease)

  background-position 50%
  background-size 1em
  background-repeat no-repeat
  display inline-block
  height 1.5em
  margin auto
  opacity .4
  padding 0
  text-align center
  width 1.15em

  &:hover
    opacity 1 !important

.e-mail,
.e-mailme,
.e-phone,
.e-alert,
.e-chevron-thin-right,
.e-chevron-thin-left,
.e-list
  font-size 1.5em

.e-mail
  svg(mail)
.e-mailme
  svg(mailme)
.e-phone
  svg(phone)
.e-alert
  svg(alert)
.e-chevron-thin-left
  svg(left)
.e-chevron-thin-right
  svg(right)
.e-list
  svg(list)
.e-github
  svg(github)
.e-twitter
  svg(twitter)
.e-facebook
  svg(facebook)
.e-linkedin
  svg(linkedin)
.e-instagram
  svg(instagram)