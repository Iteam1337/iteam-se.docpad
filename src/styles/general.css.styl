@import "variable"

@font-face
  font-family "AvantGarde ExtraLight"
  src url("/content/fonts/lte52009.ttf") format("truetype")

/* General
---------------------------------------------*/
a,
a:link
  color orange
  cursor pointer
  text-decoration none

a.btn
  box border-box

  background orange
  color #fff
  display inline-block
  font-size 12px
  margin-right 20px

a.tag
  box(border-box)
  font-family regularFontStack
  display inline-block
  position relative
  height 40px
  width 100%
  padding 0px 20px
  border-width 0px 0px 1px
  border-style none none solid
  color white
  font-size 14px
  line-height 39px
  text-align center
  vertical-align bottom
  font-weight 400
  background-color rgb(153, 153, 153)
  vendor("border-radius", 3px)
  vendor("transition", background-color 300ms ease)

  &:hover
    background-color _orange

  &.remote
    width 25%
    margin-right 20px

body,
html
  -webkit-overflow-scrolling touch
  background #fff
  font-family sansSerifFontStack
  font-size 1em
  height 100%
  overflow-x hidden
  position relative

p
  color #666
  font-family serifFontStack
  line-height 2
  color #666
  line-height 1.6
  margin-bottom 20px
  font-size 17px
  font-weight 100
  letter-spacing 0
  max-width 450px

ul
  list-style none
  margin 0
  padding 0

pre
  margin-bottom 20px

/* Headings
---------------------------------------------*/
h1,
h2,
h3,
h4
  font-weight normal
  font-family sansSerifFontStack

h2
  font-size 24px

h3
  font-size 20px

h4
  font-size 16px

/* Icons
---------------------------------------------*/
.e-mail,
.e-mailme,
.e-phone,
.e-alert,
.e-chevron-thin-right,
.e-chevron-thin-left,
.e-list,
.e-github,
.e-twitter,
.e-facebook,
.e-linkedin,
.e-instagram
  display inline-block
  width 1.15em
  height 1.5em
  background-position 50%
  background-size 1em
  background-repeat no-repeat
  margin auto
  padding 0
  text-align center
  opacity .6
  vendor("transition", opacity 300ms ease)

  &:hover
    opacity 1 !important
    vendor("transition", opacity 300ms ease)

.e-mail,
.e-mailme,
.e-phone,
.e-alert,
.e-chevron-thin-right,
.e-chevron-thin-left,
.e-list
  font-size 1.5em

.e-mail
  svg(mail)
.e-mailme
  svg(mailme)
.e-phone
  svg(phone)
.e-alert
  svg(alert)
.e-chevron-thin-left
  svg(left)
.e-chevron-thin-right
  svg(right)
.e-list
  svg(list)
.e-github
  svg(github)
.e-twitter
  svg(twitter)
.e-facebook
  svg(facebook)
.e-linkedin
  svg(linkedin)
.e-instagram
  svg(instagram)