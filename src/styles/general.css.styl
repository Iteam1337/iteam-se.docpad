@import "variable"

/* General
---------------------------------------------*/
a,
a:link
  color orange
  cursor pointer
  text-decoration none

a.btn
  box border-box

  background orange
  color #fff
  display inline-block
  font-size 12px
  margin-right 20px

body,
html
  background #fff
  font-family "AvantGarde ExtraLight", Franklin Gothic Book, Arial, Sans-Serif
  font-size 1em
  height 100%
  overflow-x hidden
  position relative

p
  color #666
  font-family "Palatino"
  line-height 2
  color #666
  line-height 1.6
  margin-bottom 20px
  font-size 17px
  font-weight 100
  letter-spacing 0
  max-width 450px

  a
    font-family "AvantGarde ExtraLight", Franklin Gothic Book, Arial, Sans-Serif

ul
  list-style none
  margin 0
  padding 0

pre
  margin-bottom 20px

/* Headings
---------------------------------------------*/
h1,
h2,
h3,
h4
  font-weight normal

h2
  font-size 24px