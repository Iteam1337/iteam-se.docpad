@import 'variable'

#slider
  .carousel-inner
    height 450px

    @media mobile
      height 250px
      
    .item
      size(100%)
      vendor("background-position", 50% 50%)
      vendor("background-size", cover)

      img
        min-height 100%
        width 100%

      .carousel-caption
        positioned('top', 'left', 50%, 50%)
        translate-pos(-50%,-50%);

        font-size 4em
        right auto
        width 1060px

        @media normalDesktop
          max-width 80%

        @media mobile
          font-size 2.5rem
          max-width 100%

        a
          color #fff

        .sub-caption
          font-size 0.4em

          @media mobile
            font-size 1rem
            padding 0 20px

          .separator-before:before
            positioned('top','right', -3px, 0, relative)

            content "\2022"
            font-size 14px
            margin 0 5px

  .carousel-control
    color #fff
    z-index 10